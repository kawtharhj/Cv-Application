@page
@model CvApplication.Pages.Cvs.DetailsModel
@{
}

<h1>Details View</h1>

<div>
    <h4>Client Number : @Model.App.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.App.FirstName  @Model.App.LastName
        </dd>
        <dt class="col-sm-2">
            Gender:
        </dt>
        <dd class="col-sm-10">
            @Model.App.Gender
        </dd>
        <dt class="col-sm-2">
            Nationality:
        </dt>
        <dd class="col-sm-10">
            @Model.App.Nationality
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Model.App.Email
        </dd>
        <dt class="col-sm-2">
            Your Skills:
        </dt>
        <dd class="col-sm-10">
            @if (Model.App.Java)
            {
                Console.WriteLine("Java");  
            }
            @if (Model.App.C)
            {
                Console.WriteLine(" C");
            }
            @if (Model.App.PHP)
            {
                Console.WriteLine(" PHP");
            }
            @if (Model.App.SQL)
            {
                Console.WriteLine(" SQL");
            }
            @if (Model.App.dotnet)
            {
                Console.WriteLine(" .net");
            } @if (Model.App.Mips)
            {
                Console.WriteLine(" Mips");
            }
            
        </dd>
        <dt class="col-sm-2">
            Grade:
        </dt>
        <dd class="col-sm-10">
            @Model.App.Grade
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            Not loaded Yet :(
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.App.Id">Edit</a> |
    <a asp-page="Browse">Back to List</a>
</div>
